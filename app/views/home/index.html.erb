<!-- app/views/home/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">SolanaMusicNFT</h1>
  
  <p class="mb-6">Plateforme de musique NFT sur Solana</p>
  
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
    Si vous voyez cette page, votre application Rails fonctionne correctement!
  </div>

 <% if @albums.present? %>
  <h2 class="text-xl font-bold mt-8 mb-4">Albums récents:</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @albums.each do |album| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-4">
          <h3 class="font-bold text-lg"><%= album.title %></h3>
          <p class="text-gray-600">Par <%= album.user.username %></p>
          <p class="mt-2"><%= album.description %></p>
          <p class="mt-2 text-sm text-gray-500">
            <%= album.tracks.count %> pistes • 
            <%= album.release_date.strftime("%d/%m/%Y") %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
</div>


