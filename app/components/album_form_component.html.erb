<!-- app/components/album_form_component.html.erb -->
<%= simple_form_for @album, html: { class: "space-y-6", multipart: true } do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-4">
      <%= f.input :title, 
                  label_html: { class: "block text-sm font-medium text-gray-700" },
                  input_html: { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
                  
      <%= f.input :description, as: :text, 
                  label_html: { class: "block text-sm font-medium text-gray-700" },
                  input_html: { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", rows: 4 } %>
                  
      <%= f.input :release_date,
                  as: :date,
                  html5: true,
                  label_html: { class: "block text-sm font-medium text-gray-700" },
                  input_html: { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
    </div>
    
    <div class="space-y-4">
      <%= f.input :cover_image, as: :file, 
                  label_html: { class: "block text-sm font-medium text-gray-700" },
                  input_html: { class: "mt-1 block w-full", direct_upload: true } %>
                  
      <% if @album.cover_image.attached? %>
        <div class="mt-2">
          <p class="text-sm text-gray-500">Current cover:</p>
          <%= image_tag @album.cover_image.variant(resize_to_limit: [200, 200]), class: "mt-2 rounded-md shadow-sm" %>
        </div>
      <% end %>
      
      <%= f.input :royalty_percentage,
                  as: :numeric,
                  label_html: { class: "block text-sm font-medium text-gray-700" },
                  input_html: { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", min: 0, max: 100, step: 0.1 } %>
                  
      <%= f.association :genres, 
                        collection: @genres,
                        as: :check_boxes,
                        wrapper_html: { class: "mt-4" },
                        label_html: { class: "block text-sm font-medium text-gray-700" },
                        input_html: { class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" } %>
    </div>
  </div>
  
  <div class="mt-6 flex justify-end">
    <%= f.button :submit, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>

